{
  "name": "civic-auth-fastify-example",
  "version": "0.0.1",
  "description": "A sample fastify app with Civic Auth",
  "main": "dist/app.js",
  "type": "module",
  "private": "true",
  "scripts": {
    "start": "bun run src/app.ts",
    "start:loginSuccessUrl": "LOGIN_SUCCESS_URL=/customSuccessRoute bun run src/app.ts",
    "typecheck": "tsc --noEmit",
    "build": "yarn typecheck && bun build src/app.ts --target bun",
    "dev": "PORT=${PORT:-3000} bun run src/app.ts --watch",
    "dev:loginSuccessUrl": "LOGIN_SUCCESS_URL=/customSuccessRoute PORT=${PORT:-3000} bun run src/app.ts --watch"
  },
  "dependencies": {
    "@civic/auth": "*",
    "@fastify/cookie": "^11.0.1",
    "bun": "^1.2.5",
    "dotenv": "^16.4.7",
    "fastify": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.6.3"
  }
}
